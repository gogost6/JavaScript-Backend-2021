<section id="viewhotelDetails">
    <h2>Details</h2>
    <div class="hotel-ticket">
        <div class="hotel-left">
            <img src="{{data.imgUrl}}" alt="hotelImage">
        </div>
        <div class="hotel-right">
            <div>
                <h3>{{data.name}}</h3>
            </div>
            <div>
               {{data.city}}
            </div>
            <p><span>Free rooms: {{data.freeRooms}}</span> </p>

            {{#if owner}}
            <a href="/hotels/edit/{{data._id}}" class="edit">Edit</a>
            <a href="/hotels/delete/{{data._id}}" class="remove">Delete</a>
            {{else}}
            {{#if booked}}
            <p><span class="green">You already have booked a room</span> </p>
            {{else}}
            <a href="/hotels/book/{{data._id}}" class="book">Book</a>
            {{/if}}
            {{/if}}
        </div>
    </div>
</section>