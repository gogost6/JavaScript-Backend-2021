<div class="container">
    <h1 class="my-4">Title : {{tut.title}}
    </h1>

    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid"
                src="{{tut.imageUrl}}"
                alt="{{tut.title}}" />
        </div>

        <div class="col-md-4 text-center">
            <h4 class="my-3">Duration</h4>
            <p>{{tut.duration}}</p>
            <h3 class="my-3">Description</h3>
            <p>{{tut.description}}</p>

            {{#if owner}}
            <a class="btn btn-danger" href="/tutorials/delete/{{tut._id}}">Delete</a>
            <a class="btn btn-warning" href="/tutorials/edit/{{tut._id}}">Edit</a>
            {{else}}
            {{#if enrolled}}
            <span class="enrolled-span">You are already enrolled</span>
            {{else}}
            <a class="btn btn-primary" href="/tutorials/enroll/{{tut._id}}">Enroll</a>
            {{/if}}
            {{/if}}

        </div>
    </div>
</div>