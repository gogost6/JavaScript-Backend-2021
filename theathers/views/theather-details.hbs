<div class="container">

    <section class="details">
        <h1>Theater title: {{data.theather}}</h1>
        <div>
            <img src="{{data.imageUrl}}" />
        </div>
    </section>

    <section class="details">
        <h3>Theater Description</h3>
        <p>{{data.description}}</p>
        <div class="buttons">
            {{#if owner}}
            <a class="btn delete" href="/theathers/delete/{{data._id}}">Delete</a>
            <a class="btn edit" href="/theathers/edit/{{data._id}}">Edit</a>
            {{else}}
            {{#if liked}}
            <span class="liked">You have already liked this play!</span>
            {{else}}
            <a class="btn like" href="/theathers/like/{{data._id}}">Like</a>
            {{/if}}
            {{/if}}
        </div>
    </section>
</div>