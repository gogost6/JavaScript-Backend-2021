<form action="/user/register" method="POST">
    <h2>Register</h2>
    <div class="on-dark">
        <label for="username">Username:</label>
        <input type="text" name="username" id="username" placeholder="Steven" value="{{data.username}}">
    </div>

    <div class="on-dark">
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" placeholder="********" value="">
    </div>

    <div class="on-dark">
        <label for="rePass">Repeat Password:</label>
        <input type="password" name="rePass" id="rePass" placeholder="********" value="">
    </div>

    <button class="btn" type="submit">Register</button>
</form>