{{#with data}}
<form class="theater-form" action="/theathers/edit/{{_id}}" method="POST">
    <h1>Edit Theater</h1>
    <div>
        <label for="title">Theater Title:</label>
        <input type="text" id="theather" name="theather" placeholder="Theater name" value="{{theather}}">
    </div>
    <div>
        <label for="description">Theater Description:</label>
        <textarea name="description" id="description" placeholder="Description">{{description}}</textarea>
    </div>
    <div>
        <label for="imageUrl">Image url:</label>
        <input type="text" name="imageUrl" id="imageUrl" placeholder="Image Url" value="{{imageUrl}}">
    </div>
    <div class="check">
        <input type="checkbox" id="checkbox" name="checkbox" checked="{{isPublic}}">
        <label for="check-box">Public</label>
    </div>
    <button class="btn" type="submit">Submit</button>
</form>
{{/with}}